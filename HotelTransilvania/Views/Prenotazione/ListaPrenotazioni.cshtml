@model IEnumerable<HotelTransilvania.Models.Prenotazione>

@{
    ViewBag.Title = "ListaPrenotazioni";
}

<h2>ListaPrenotazioni</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.DataPrenotazione)</th>
            <th>@Html.DisplayNameFor(model => model.DataCheckIn)</th>
            <th>@Html.DisplayNameFor(model => model.DataCheckOut)</th>
            <th>@Html.DisplayNameFor(model => model.Anticipo)</th>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Cognome)</th>
            <th>@Html.DisplayNameFor(model => model.Descrizione)</th>
            <th>@Html.DisplayNameFor(model => model.Prezzo)</th>
            @*<th>@Html.DisplayNameFor(model => model.IdTipoPrenotazione)</th>
            <th>@Html.DisplayNameFor(model => model.IdCliente)</th>
            <th>@Html.DisplayNameFor(model => model.IdCamera)</th>
            <th>@Html.DisplayNameFor(model => model.IdServizio)</th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DataPrenotazione)</td>
                <td>@Html.DisplayFor(modelItem => item.DataCheckIn)</td>
                <td>@Html.DisplayFor(modelItem => item.DataCheckOut)</td>
                <td>@Html.DisplayFor(modelItem => item.Anticipo)</td>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Cognome)</td>
                <td>@Html.DisplayFor(modelItem => item.Descrizione)</td>
                <td>@Html.DisplayFor(modelItem => item.Prezzo)</td>
                @*<td>@Html.DisplayFor(modelItem => item.IdTipoPrenotazione)</td>
                <td>@Html.DisplayFor(modelItem => item.IdCliente)</td>
                <td>@Html.DisplayFor(modelItem => item.IdCamera)</td>
                <td>@Html.DisplayFor(modelItem => item.IdServizio)</td>*@
            <td>
                <a href="@Url.Action("Edit", new { id = item.IdPrenotazione })" class="btn btn-outline-secondary btn-sm">Edit</a>
                @Html.ActionLink("Delete", "Delete", null, new { @class = "btn btn-outline-danger", onclick = "return confirm('Vuoi Nascondere l'articolo?');" })
            </td>
            </tr>
        }
    </tbody>
</table>
